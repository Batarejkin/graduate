  <%= "Является работодателем"%>
  <% else%>
      <%="Является работником"%>
  <%end%>
</p>

<p>
  <strong>Passport:</strong>
  <%= @user.passport %>
</p>

<p>
  <strong>Description:</strong>
  <%= @user.description %>
</p>

  <%if current_user==@user%>
    <%= link_to 'Редактировать', edit_user_path(@user) %> 
  <%end%>

